<Window x:Class="TranquilTurtle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranquilTurtle"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter Process name to close" Margin="0,0,0,10" HorizontalAlignment="Center"></TextBlock>
            <TextBlock x:Name="TbProcessName" Width="200" Margin="0,0,0,10"
                       Background="pink"></TextBlock>
            <Button Content="Block App" Width="100" Click="BlockApp_Click" Margin="0,0,0,10" ></Button>
            <Button Content="Load Blocked Apps" Width="150" Click="LoadBlockedApps_Click" ></Button>
            <ListBox x:Name="BlockedAppsListBox" Height="100" Margin="0,20,0,0"></ListBox>
            <TextBlock x:Name="StatustText" Margin="0,10,0,0"></TextBlock>
            
        </StackPanel>

    </Grid>
</Window>
